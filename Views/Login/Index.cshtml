
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>

<head>

    <meta name="viewport" content="width=device-width" />

    <title>Index</title>

    <link href="~/css/bootstrap.min.css" rel="stylesheet" />

</head>

<body>

    <div ng-app="Homeapp" ng-controller="RegisterController">
        <script src="~/js/angular.min.js"></script>

        
        <div class="container">

            <div class="row">

                <div class="col-sm-2"></div>

                <div class="col-sm-8">

                    <div class="form-group">

                        <label>User Name</label>

                        <input type="text" ng-model="user.UserName" class="form-control" />

                    </div>

                    <div class="form-group">

                        <label>Password</label>

                        <input type="password" ng-model="user.UserPassword" class="form-control" />

                    </div>

                    <div class="form-group">

                        <label>Mail</label>

                        <input type="text" ng-model="user.UserMail" class="form-control" />

                    </div>

                    <div class="form-group">

                        <input type="button" class="btn btn-primary" ng-click="savedata()" value="{{btntext}}" />

                    </div>



                    <div class="col-sm-2"></div>

                </div>

            </div>

        </div>

    </div>

    <script src="~/js/Usercontroller.js"></script>


</body>
</html>